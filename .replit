modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Install Dependencies"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Simple Domain Manager"

[[workflows.workflow]]
name = "Install Dependencies"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install express cors socket.io axios react react-dom react-scripts"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"
waitForPort = 8000

[[workflows.workflow]]
name = "Simple Domain Manager"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node simple-domain-manager.js"
waitForPort = 3001

[deployment]
run = ["sh", "-c", "npm install express cors socket.io axios react react-dom react-scripts"]

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 8000
externalPort = 80
